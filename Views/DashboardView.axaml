<UserControl xmlns="https://github.com/avaloniaui"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:urban_city_power_managment.ViewModels"
         mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
     x:Class="urban_city_power_managment.Views.DashboardView"
       x:DataType="vm:DashboardViewModel">
    
 <ScrollViewer>
        <StackPanel Spacing="24">
  <TextBlock Text="{Binding Title}" Classes="header"/>
            
  <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto" ColumnSpacing="12">
    <!-- Overview Cards -->
   <Border Classes="card" Grid.Column="0">
      <StackPanel Spacing="12">
        <TextBlock Text="Totale Opwekking" Classes="subheader" FontSize="16" FontWeight="SemiBold"/>
    <TextBlock Text="2,845" FontSize="32" FontWeight="Bold" Foreground="#01689B"/>
  <TextBlock Text="MW" Classes="label" Foreground="#696969"/>
 <ProgressBar Value="75" Maximum="100" Height="8" Foreground="#01689B"/>
     </StackPanel>
   </Border>

    <Border Classes="card" Grid.Column="1">
         <StackPanel Spacing="12">
      <TextBlock Text="Totaal Verbruik" Classes="subheader" FontSize="16" FontWeight="SemiBold"/>
     <TextBlock Text="2,156" FontSize="32" FontWeight="Bold" Foreground="#01689B"/>
           <TextBlock Text="MW" Classes="label" Foreground="#696969"/>
  <ProgressBar Value="60" Maximum="100" Height="8" Foreground="#01689B"/>
       </StackPanel>
   </Border>

 <Border Classes="card" Grid.Column="2">
 <StackPanel Spacing="12">
   <TextBlock Text="Duurzaam Percentage" Classes="subheader" FontSize="16" FontWeight="SemiBold"/>
<TextBlock Text="40%" FontSize="32" FontWeight="Bold" Foreground="#39870C"/>
        <TextBlock Text="Hernieuwbare Energie" Classes="label" Foreground="#696969"/>
 <ProgressBar Value="40" Maximum="100" Height="8" Foreground="#39870C"/>
        </StackPanel>
      </Border>
 </Grid>

 <!-- Quick Stats Grid -->
    <Border Classes="card">
      <StackPanel Spacing="16">
<TextBlock Text="Realtime Overzicht" Classes="subheader" FontSize="18" FontWeight="SemiBold"/>
<Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="16" RowSpacing="16">
     <!-- Wind Energy -->
    <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
 <TextBlock Text="Wind Energie" Classes="label" Foreground="#666"/>
 <TextBlock Text="569 MW (20%)" FontSize="18" FontWeight="SemiBold"/>
   </StackPanel>
        
   <!-- Water Energy -->
      <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
       <TextBlock Text="Water Energie" Classes="label" Foreground="#666"/>
   <TextBlock Text="569 MW (20%)" FontSize="18" FontWeight="SemiBold"/>
       </StackPanel>
   
     <!-- Coal Energy -->
  <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
       <TextBlock Text="Kolen Energie" Classes="label" Foreground="#666"/>
   <TextBlock Text="1,707 MW (60%)" FontSize="18" FontWeight="SemiBold"/>
    </StackPanel>
    
           <!-- Solar Return -->
        <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4">
    <TextBlock Text="Zonne-energie Teruglevering" Classes="label" Foreground="#666"/>
   <TextBlock Text="320 MW" FontSize="18" FontWeight="SemiBold" Foreground="#39870C"/>
  </StackPanel>
    </Grid>
      </StackPanel>
       </Border>

         <!-- Recent Activity -->
<Border Classes="card">
        <StackPanel Spacing="16">
  <TextBlock Text="Recente Activiteit" Classes="subheader" FontSize="18" FontWeight="SemiBold"/>
  <StackPanel Spacing="12">
  <Border Background="#E3F2FD" Padding="12" CornerRadius="4" BorderBrush="#01689B" BorderThickness="1">
        <StackPanel Orientation="Horizontal" Spacing="8">
              <Border Background="#4CAF50" Width="4" CornerRadius="2"/>
        <TextBlock Text="Windturbine sectie Noord geïnspecteerd - 2 uur geleden" FontSize="14"/>
       </StackPanel>
   </Border>
    <Border Background="#FFF8E1" Padding="12" CornerRadius="4" BorderBrush="#FDB515" BorderThickness="1">
           <StackPanel Orientation="Horizontal" Spacing="8">
 <Border Background="#FF9800" Width="4" CornerRadius="2"/>
              <TextBlock Text="Hoog verbruik gedetecteerd in industriezone - 3 uur geleden" FontSize="14"/>
  </StackPanel>
       </Border>
<Border Background="#E3F2FD" Padding="12" CornerRadius="4" BorderBrush="#01689B" BorderThickness="1">
           <StackPanel Orientation="Horizontal" Spacing="8">
           <Border Background="#4CAF50" Width="4" CornerRadius="2"/>
              <TextBlock Text="Kwartaalrapport gegenereerd - 5 uur geleden" FontSize="14"/>
      </StackPanel>
   </Border>
   </StackPanel>
 </StackPanel>
         </Border>
     </StackPanel>
    </ScrollViewer>
</UserControl>
