<UserControl xmlns="https://github.com/avaloniaui"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:vm="using:urban_city_power_managment.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
     x:Class="urban_city_power_managment.Views.NotificationsView"
 x:DataType="vm:NotificationsViewModel">
    
   <ScrollViewer>
 <StackPanel Spacing="24">
      <TextBlock Text="{Binding Title}" Classes="header"/>

  <!-- Notifications List -->
     <ItemsControl ItemsSource="{Binding Notifications}">
     <ItemsControl.ItemTemplate>
      <DataTemplate>
      <Border Classes="card" Margin="0,0,0,12" BorderBrush="#E17000" BorderThickness="0,0,0,2">
   <Grid ColumnDefinitions="Auto,*,Auto">
   <!-- Icon based on type -->
      <Border Grid.Column="0" 
  Background="#FFF5E6" 
   Width="48" 
       Height="48" 
       CornerRadius="4"
   Margin="0,0,16,0"
     BorderBrush="#E17000"
         BorderThickness="1">
      <TextBlock Text="!" 
 FontSize="24" 
            FontWeight="Bold"
           Foreground="#E17000"
HorizontalAlignment="Center" 
VerticalAlignment="Center"/>
     </Border>
    
 <!-- Message Content -->
       <StackPanel Grid.Column="1" Spacing="4" VerticalAlignment="Center" Margin="0,0,16,0">
  <TextBlock Text="{Binding Type}" 
  FontSize="12" 
      FontWeight="SemiBold" 
      Foreground="#E17000"/>
   <TextBlock Text="{Binding Message}" 
     FontSize="14" 
      TextWrapping="Wrap"/>
     </StackPanel>
       
  <!-- Time -->
    <TextBlock Grid.Column="2" 
       Text="{Binding Time}" 
FontSize="12" 
  Foreground="#696969"
VerticalAlignment="Center"/>
    </Grid>
       </Border>
 </DataTemplate>
</ItemsControl.ItemTemplate>
   </ItemsControl>

 <!-- Empty State -->
 <Border Classes="card" Background="#F0FFF0" BorderBrush="#39870C" BorderThickness="2" IsVisible="{Binding !Notifications.Count}">
    <StackPanel Spacing="12" Margin="40">
        <Border Background="#39870C" CornerRadius="24" Width="48" Height="48" HorizontalAlignment="Center">
   <TextBlock Text="?" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
       </Border>
       <TextBlock Text="Geen nieuwe meldingen" 
   FontSize="18"
           FontWeight="SemiBold"
  HorizontalAlignment="Center"/>
    <TextBlock Text="Alles werkt naar behoren" 
    Classes="body" 
      HorizontalAlignment="Center" 
    Foreground="#696969"/>
      </StackPanel>
   </Border>
        </StackPanel>
 </ScrollViewer>
</UserControl>
