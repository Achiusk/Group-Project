<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:vm="using:urban_city_power_managment.ViewModels"
  mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
x:Class="urban_city_power_managment.Views.TasksView"
   x:DataType="vm:TasksViewModel">
    
  <ScrollViewer>
   <StackPanel Spacing="24">
   <TextBlock Text="{Binding Title}" Classes="header"/>

     <!-- Tasks List -->
   <ItemsControl ItemsSource="{Binding Tasks}">
   <ItemsControl.ItemTemplate>
     <DataTemplate>
 <Border Classes="card" Margin="0,0,0,12">
   <Grid ColumnDefinitions="Auto,*,Auto,Auto">
   <!-- Checkbox -->
 <CheckBox Grid.Column="0" VerticalAlignment="Center" Margin="0,0,16,0"/>
        
      <!-- Task Details -->
   <StackPanel Grid.Column="1" Spacing="4" VerticalAlignment="Center" Margin="0,0,16,0">
      <TextBlock Text="{Binding Name}" 
   FontSize="16" 
     FontWeight="SemiBold"/>
      <TextBlock Text="{Binding Status}" 
      FontSize="12" 
  Foreground="#696969"/>
</StackPanel>
    
    <!-- Priority Badge -->
     <Border Grid.Column="2" 
 Background="#D52B1E" 
      Padding="8,4" 
       CornerRadius="4"
   VerticalAlignment="Center"
   Margin="0,0,16,0">
    <TextBlock Text="{Binding Priority}" 
 FontSize="11" 
      Foreground="White" 
    FontWeight="SemiBold"/>
   </Border>
       
        <!-- Action Button -->
 <Button Grid.Column="3" 
    Classes="secondary"
   Content="Details"
   VerticalAlignment="Center"/>
   </Grid>
 </Border>
   </DataTemplate>
  </ItemsControl.ItemTemplate>
   </ItemsControl>

  <!-- Add New Task Button -->
  <Button Classes="primary" HorizontalAlignment="Left">
       <StackPanel Orientation="Horizontal" Spacing="8">
   <TextBlock Text="+" FontSize="18" FontWeight="Bold"/>
  <TextBlock Text="Nieuwe Taak Toevoegen"/>
      </StackPanel>
 </Button>
 </StackPanel>
    </ScrollViewer>
</UserControl>
