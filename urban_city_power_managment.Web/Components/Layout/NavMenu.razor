@using urban_city_power_managment.Web.Services
@using urban_city_power_managment.Web.Models
@using Microsoft.AspNetCore.Components.Authorization
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject AppStateService AppState
@implements IDisposable

<div class="sidebar">
    <div class="sidebar-header">
        <a href="/" class="brand">
            <span class="brand-icon">⚡</span>
            <span class="brand-text">@(AppState.IsEnglish ? "My Energy" : "Mijn Energie")</span>
        </a>
    </div>

    <nav class="sidebar-nav">
        <ul class="nav-list">
            @if (isAuthenticated)
            {
                <li class="nav-item">
                    <NavLink class="nav-link" href="dashboard" Match="NavLinkMatch.All">
                        <span class="nav-icon">🏠</span>
                        <span class="nav-text">Dashboard</span>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="mijn-energie">
                        <span class="nav-icon">📊</span>
                        <span class="nav-text">@(AppState.IsEnglish ? "My Energy" : "Mijn Energie")</span>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="tips">
                        <span class="nav-icon">💡</span>
                        <span class="nav-text">@(AppState.IsEnglish ? "Saving Tips" : "Bespaartips")</span>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="leveranciers">
                        <span class="nav-icon">🏢</span>
                        <span class="nav-text">@(AppState.IsEnglish ? "Suppliers" : "Leveranciers")</span>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="weer">
                        <span class="nav-icon">🌤️</span>
                        <span class="nav-text">@(AppState.IsEnglish ? "Weather" : "Weer")</span>
                    </NavLink>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="nav-icon">🏠</span>
                        <span class="nav-text">Home</span>
                    </NavLink>
                </li>
            }
        </ul>

        @if (isAuthenticated)
        {
            <div class="nav-divider"></div>

            <ul class="nav-list">
                <li class="nav-item">
                    <NavLink class="nav-link" href="instellingen">
                        <span class="nav-icon">⚙️</span>
                        <span class="nav-text">@(AppState.IsEnglish ? "Settings" : "Instellingen")</span>
                    </NavLink>
                </li>
            </ul>
        }
    </nav>

    <div class="sidebar-footer">
        @if (isAuthenticated && currentUser != null)
        {
            <div class="user-info mb-3">
                <div class="user-avatar">
                    @currentUser.FirstName[0]@currentUser.LastName[0]
                </div>
                <div class="user-details">
                    <span class="user-name">@currentUser.FirstName @currentUser.LastName</span>
                    <small class="user-email">@currentUser.Email</small>
                </div>
            </div>
            <button class="btn btn-logout btn-sm w-100" @onclick="HandleLogout">
                🚪 @(AppState.IsEnglish ? "Logout" : "Uitloggen")
            </button>
        }
        else
        {
            <div class="auth-buttons">
                <a href="/inloggen" class="btn btn-login btn-sm w-100 mb-2">
                    🔐 @(AppState.IsEnglish ? "Login" : "Inloggen")
                </a>
                <a href="/registreren" class="btn btn-register btn-sm w-100">
                    📝 @(AppState.IsEnglish ? "Register" : "Registreren")
                </a>
            </div>
        }
    </div>
</div>

