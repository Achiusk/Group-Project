@page "/weer"
@using urban_city_power_managment.Web.Models
@using urban_city_power_managment.Web.Services
@inject IWeatherService WeatherService
@inject AppStateService AppState
@implements IDisposable

<PageTitle>@(AppState.IsEnglish ? "Weather" : "Weer") - Eindhoven Energie</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1><span class="emoji">🌤️</span> @(AppState.IsEnglish ? "Weather Eindhoven" : "Weer Eindhoven")</h1>
            <p class="lead">@(AppState.IsEnglish ? "Current weather conditions and impact on energy usage" : "Actuele weersomstandigheden en impact op energieverbruik")</p>
        </div>
    </div>

    @if (currentWeather != null)
    {
        <!-- Current Weather -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card weather-card-main">
                    <div class="card-body text-center p-5">
                        <span class="weather-icon">@((MarkupString)GetWeatherIcon())</span>
                        <h1 class="display-1 mb-0">@currentWeather.Temperature.ToString("F0")°C</h1>
                        <p class="lead location-text">Eindhoven, @(AppState.IsEnglish ? "Netherlands" : "Nederland")</p>
                        <p class="mb-0 humidity-text">
                            @(AppState.IsEnglish ? "Humidity" : "Luchtvochtigheid"): @currentWeather.Humidity%
                        </p>
                        <p class="small wind-text">
                            Wind: @currentWeather.WindSpeed.ToString("F1") km/h
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 impact-card">
                    <div class="card-header">
                        <h5 class="mb-0"><span class="emoji">⚡</span> @(AppState.IsEnglish ? "Weather & Energy Impact" : "Weer & Energie Impact")</h5>
                    </div>
                    <div class="card-body">
                        <div class="impact-item mb-3 p-3 rounded @GetSolarImpactClass()">
                            <div class="d-flex align-items-center">
                                <span class="emoji me-3" style="font-size: 2rem;">☀️</span>
                                <div>
                                    <strong>@(AppState.IsEnglish ? "Solar energy" : "Zonne-energie")</strong>
                                    <p class="mb-0 small">@GetSolarImpactText()</p>
                                </div>
                            </div>
                        </div>
                        <div class="impact-item mb-3 p-3 rounded @GetWindImpactClass()">
                            <div class="d-flex align-items-center">
                                <span class="emoji me-3" style="font-size: 2rem;">🌬️</span>
                                <div>
                                    <strong>@(AppState.IsEnglish ? "Wind energy" : "Windenergie")</strong>
                                    <p class="mb-0 small">@GetWindImpactText()</p>
                                </div>
                            </div>
                        </div>
                        <div class="impact-item p-3 rounded @GetHeatingImpactClass()">
                            <div class="d-flex align-items-center">
                                <span class="emoji me-3" style="font-size: 2rem;">🏠</span>
                                <div>
                                    <strong>@(AppState.IsEnglish ? "Heating needs" : "Verwarmingsbehoefte")</strong>
                                    <p class="mb-0 small">@GetHeatingImpactText()</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Forecast -->
        <div class="card mb-4 forecast-card">
            <div class="card-header">
                <h5 class="mb-0"><span class="emoji">📅</span> @(AppState.IsEnglish ? "5-Day Forecast" : "5-Daagse Voorspelling")</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    @foreach (var day in forecast)
                    {
                        <div class="col">
                            <div class="forecast-day p-3">
                                <p class="mb-1 fw-bold day-name">@day.Date.ToString("ddd", AppState.IsEnglish ? new System.Globalization.CultureInfo("en-US") : new System.Globalization.CultureInfo("nl-NL"))</p>
                                <span class="emoji" style="font-size: 2rem;">@((MarkupString)GetWeatherIconForTemp(day.TemperatureC))</span>
                                <p class="mb-0 mt-2">
                                    <span class="temp-value">@day.TemperatureC°</span>
                                </p>
                                <small class="forecast-summary">@(AppState.IsEnglish ? GetEnglishSummary(day.Summary) : day.Summary)</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Energy Tips Based on Weather -->
        <div class="card mb-4 tips-card">
            <div class="card-body">
                <h5><span class="emoji">💡</span> @(AppState.IsEnglish ? "Tips for today" : "Tips voor vandaag")</h5>
                <div class="row mt-3">
                    @if (currentWeather.Temperature > 20)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="tip-item p-3 rounded">
                                <span class="emoji">🧊</span> @(AppState.IsEnglish ? "It's warm! Avoid excessive AC use - open windows for natural ventilation." : "Het is warm! Vermijd overmatig gebruik van airco - zet ramen open voor natuurlijke ventilatie.")
                            </div>
                        </div>
                    }
                    @if (currentWeather.Temperature < 10)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="tip-item p-3 rounded">
                                <span class="emoji">🌡️</span> @(AppState.IsEnglish ? "Cold weather expected. Optimize your heating by setting the thermostat to 19°C." : "Koud weer verwacht. Optimaliseer je verwarming door de thermostaat op 19°C te zetten.")
                            </div>
                        </div>
                    }
                    @if (currentWeather.WindSpeed > 15)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="tip-item p-3 rounded">
                                <span class="emoji">🌬️</span> @(AppState.IsEnglish ? "Windy weather! Wind energy production is high - ideal time for energy-intensive tasks." : "Winderig weer! Windenergie productie is hoog - ideaal moment om energie-intensieve taken te doen.")
                            </div>
                        </div>
                    }
                    @if (DateTime.Now.Hour >= 10 && DateTime.Now.Hour <= 15)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="tip-item p-3 rounded">
                                <span class="emoji">☀️</span> @(AppState.IsEnglish ? "Peak hours for solar energy! If you have solar panels, now is the time to run the washing machine or dishwasher." : "Piekuren voor zonne-energie! Als je zonnepanelen hebt, is dit het moment om wasmachine of vaatwasser te draaien.")
                            </div>
                        </div>
                    }
                    @if (currentWeather.Temperature >= 10 && currentWeather.Temperature <= 20 && currentWeather.WindSpeed <= 15)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="tip-item p-3 rounded">
                                <span class="emoji">✅</span> @(AppState.IsEnglish ? "Perfect weather conditions! Ideal time to ventilate and save energy." : "Perfecte weersomstandigheden! Ideaal om te luchten en energie te besparen.")
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">@(AppState.IsEnglish ? "Loading..." : "Laden...")</span>
            </div>
            <p class="mt-3">@(AppState.IsEnglish ? "Loading weather data..." : "Weergegevens worden geladen...")</p>
        </div>
    }
</div>

<style>
    .weather-card-main {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 16px;
    }
    .weather-card-main .location-text { color: rgba(255,255,255,0.8); }
    .weather-card-main .humidity-text { color: rgba(255,255,255,0.9); }
    .weather-card-main .wind-text { color: rgba(255,255,255,0.7); }
    
    .weather-icon {
        font-size: 5rem;
        display: block;
        margin-bottom: 1rem;
    }
    .impact-item {
        transition: all 0.2s;
    }
    .impact-good {
        background: #e8f5e9;
        border-left: 4px solid #4caf50;
        color: #2e7d32;
    }
    .impact-moderate {
        background: #fff8e1;
        border-left: 4px solid #ff9800;
        color: #e65100;
    }
    .impact-low {
        background: #ffebee;
        border-left: 4px solid #f44336;
        color: #c62828;
    }
    .forecast-day {
        border-radius: 12px;
        transition: all 0.2s;
    }
    .forecast-day:hover {
        background: #f8f9fa;
    }
    .tip-item {
        border-left: 3px solid #667eea;
        background-color: #ffffff;
    }
    .emoji {
        font-family: "Segoe UI Emoji", "Noto Color Emoji", "Apple Color Emoji", "Segoe UI Symbol", sans-serif;
    }
    
    .day-name { color: #333; }
    .temp-value { color: #dc3545; }
    .forecast-summary { color: #6c757d; }

    /* Dark mode */
    [data-theme="dark"] .impact-card,
    [data-theme="dark"] .forecast-card,
    [data-theme="dark"] .tips-card {
        background-color: #1e1e1e !important;
        border-color: #333 !important;
    }

    [data-theme="dark"] .impact-card .card-header,
    [data-theme="dark"] .forecast-card .card-header {
        background-color: #2a2a2a !important;
        border-bottom-color: #333 !important;
    }

    [data-theme="dark"] .impact-good {
        background: rgba(76, 175, 80, 0.2) !important;
        color: #81c784 !important;
    }
    [data-theme="dark"] .impact-moderate {
        background: rgba(255, 152, 0, 0.2) !important;
        color: #ffb74d !important;
    }
    [data-theme="dark"] .impact-low {
        background: rgba(244, 67, 54, 0.2) !important;
        color: #e57373 !important;
    }

    [data-theme="dark"] .forecast-day:hover {
        background: #2a2a2a !important;
    }

    [data-theme="dark"] .day-name {
        color: #ffffff !important;
    }

    [data-theme="dark"] .forecast-summary {
        color: #aaa !important;
    }

    [data-theme="dark"] .tip-item {
        background-color: #2a2a2a !important;
        color: #ffffff !important;
    }

    [data-theme="dark"] .tips-card {
        background-color: #1e1e1e !important;
    }
</style>

@code {
    private WeatherData? currentWeather;
    private List<ForecastDay> forecast = new();

    protected override void OnInitialized()
    {
        AppState.OnChange += StateHasChanged;
    }

    protected override async Task OnInitializedAsync()
    {
        currentWeather = await WeatherService.GetCurrentWeatherAsync();
        GenerateForecast();
    }

    private void GenerateForecast()
    {
        var random = new Random();
        var summaries = new[] { "Zonnig", "Bewolkt", "Regen", "Wisselend", "Helder" };
        
        for (int i = 1; i <= 5; i++)
        {
            forecast.Add(new ForecastDay
            {
                Date = DateOnly.FromDateTime(DateTime.Now.AddDays(i)),
                TemperatureC = random.Next(5, 25),
                Summary = summaries[random.Next(summaries.Length)]
            });
        }
    }

    private string GetEnglishSummary(string? dutchSummary) => dutchSummary switch
    {
        "Zonnig" => "Sunny",
        "Bewolkt" => "Cloudy",
        "Regen" => "Rain",
        "Wisselend" => "Variable",
        "Helder" => "Clear",
        _ => dutchSummary ?? "Unknown"
    };

    private string GetWeatherIcon()
    {
        var hour = DateTime.Now.Hour;
        if (hour < 6 || hour > 20) return "🌙";
        if (currentWeather?.Temperature > 20) return "☀️";
        if (currentWeather?.Temperature < 5) return "❄️";
        return "🌤️";
    }

    private string GetWeatherIconForTemp(int temp)
    {
        if (temp > 20) return "☀️";
        if (temp < 5) return "❄️";
        return "🌤️";
    }

    private string GetSolarImpactClass()
    {
        var hour = DateTime.Now.Hour;
        if (hour >= 10 && hour <= 15) return "impact-good";
        if (hour >= 7 && hour <= 18) return "impact-moderate";
        return "impact-low";
    }

    private string GetSolarImpactText()
    {
        var hour = DateTime.Now.Hour;
        if (AppState.IsEnglish)
        {
            if (hour >= 10 && hour <= 15) return "Optimal production - peak hours!";
            if (hour >= 7 && hour <= 18) return "Moderate production expected";
            return "No sunlight - no production";
        }
        if (hour >= 10 && hour <= 15) return "Optimale productie - piekuren!";
        if (hour >= 7 && hour <= 18) return "Matige productie verwacht";
        return "Geen zonlicht - geen productie";
    }

    private string GetWindImpactClass()
    {
        if (currentWeather?.WindSpeed > 20) return "impact-good";
        if (currentWeather?.WindSpeed > 10) return "impact-moderate";
        return "impact-low";
    }

    private string GetWindImpactText()
    {
        if (AppState.IsEnglish)
        {
            if (currentWeather?.WindSpeed > 20) return "Strong wind - high production!";
            if (currentWeather?.WindSpeed > 10) return "Moderate wind - normal production";
            return "Little wind - low production";
        }
        if (currentWeather?.WindSpeed > 20) return "Sterke wind - hoge productie!";
        if (currentWeather?.WindSpeed > 10) return "Matige wind - normale productie";
        return "Weinig wind - lage productie";
    }

    private string GetHeatingImpactClass()
    {
        if (currentWeather?.Temperature > 18) return "impact-good";
        if (currentWeather?.Temperature > 10) return "impact-moderate";
        return "impact-low";
    }

    private string GetHeatingImpactText()
    {
        if (AppState.IsEnglish)
        {
            if (currentWeather?.Temperature > 18) return "No heating needed";
            if (currentWeather?.Temperature > 10) return "Light heating recommended";
            return "Heating needed - watch gas usage";
        }
        if (currentWeather?.Temperature > 18) return "Geen verwarming nodig";
        if (currentWeather?.Temperature > 10) return "Lichte verwarming aanbevolen";
        return "Verwarming nodig - let op gasverbruik";
    }

    private class ForecastDay
    {
        public DateOnly Date { get; set; }
        public int TemperatureC { get; set; }
        public string? Summary { get; set; }
    }

    public void Dispose()
    {
        AppState.OnChange -= StateHasChanged;
    }
}
