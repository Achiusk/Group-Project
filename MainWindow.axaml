<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     xmlns:vm="using:urban_city_power_managment.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
        x:Class="urban_city_power_managment.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding AppTitle}"
        Width="1400" Height="900"
   Background="#F5F5F5">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
     <!-- Header -->
<RowDefinition Height="80"/>
         <!-- Content -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
 <Grid.ColumnDefinitions>
       <!-- Sidebar Navigation -->
     <ColumnDefinition Width="250"/>
            <!-- Main Content -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

<!-- Header Bar (Rijksoverheid Blue) -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
          Background="#01689B"
        BoxShadow="0 2 8 0 #40000000">
    <Grid Margin="20,0">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
   </Grid.ColumnDefinitions>

 <!-- App Title -->
            <TextBlock Grid.Column="0"
      Text="{Binding AppTitle}"
      FontSize="24"
      FontWeight="Bold"
   Foreground="White"
      VerticalAlignment="Center"/>

       <!-- Weather and Location -->
          <StackPanel Grid.Column="1" 
      Orientation="Horizontal"
     HorizontalAlignment="Center"
                VerticalAlignment="Center"
             Spacing="30">
               <StackPanel Orientation="Horizontal" Spacing="8">
     <TextBlock Text="Location:" 
   FontSize="14" 
     Foreground="#B0C4DE"
        VerticalAlignment="Center"/>
   <TextBlock Text="{Binding Location}" 
   FontSize="16" 
         FontWeight="SemiBold"
            Foreground="White"
       VerticalAlignment="Center"/>
          </StackPanel>
           <TextBlock Text="|" 
      FontSize="16" 
         Foreground="#B0C4DE"
            VerticalAlignment="Center"/>
      <StackPanel Orientation="Horizontal" Spacing="8">
    <TextBlock Text="Weather:" 
 FontSize="14" 
 Foreground="#B0C4DE"
        VerticalAlignment="Center"/>
  <TextBlock Text="{Binding WeatherInfo}" 
       FontSize="16" 
  FontWeight="SemiBold"
       Foreground="White"
   VerticalAlignment="Center"/>
          </StackPanel>
         </StackPanel>

    <!-- Date and Time -->
     <StackPanel Grid.Column="2" 
        VerticalAlignment="Center"
           Spacing="4">
         <TextBlock Text="{Binding CurrentDate}" 
       FontSize="14" 
      Foreground="White"
        HorizontalAlignment="Right"/>
    <TextBlock Text="{Binding CurrentTime}" 
      FontSize="20" 
 FontWeight="Bold"
            Foreground="White"
      HorizontalAlignment="Right"/>
            </StackPanel>
            </Grid>
        </Border>

        <!-- Sidebar Navigation -->
        <Border Grid.Row="1" Grid.Column="0" 
                Background="#154273"
  BorderBrush="#01689B"
        BorderThickness="0,0,1,0">
 <ScrollViewer>
         <StackPanel Margin="0,20,0,0" Spacing="4">
    <!-- Dashboard -->
  <Button Click="OnDashboardClick" Classes="navButton">
        <TextBlock Text="{Binding DashboardLabel}" FontSize="16" FontWeight="SemiBold"/>
      </Button>

  <!-- Power Generation -->
  <Button Click="OnPowerGenerationClick" Classes="navButton">
  <TextBlock Text="{Binding PowerGenerationLabel}" FontSize="16" FontWeight="SemiBold"/>
   </Button>

 <!-- Consumers -->
     <Button Click="OnConsumersClick" Classes="navButton">
       <TextBlock Text="{Binding ConsumersLabel}" FontSize="16" FontWeight="SemiBold"/>
  </Button>

   <!-- Businesses -->
      <Button Click="OnBusinessesClick" Classes="navButton">
      <TextBlock Text="{Binding BusinessesLabel}" FontSize="16" FontWeight="SemiBold"/>
     </Button>

    <!-- Gas Infrastructure -->
<Button Click="OnGasInfrastructureClick" Classes="navButton">
        <TextBlock Text="{Binding GasInfrastructureLabel}" FontSize="16" FontWeight="SemiBold"/>
      </Button>

      <!-- Notifications -->
    <Button Click="OnNotificationsClick" Classes="navButton">
      <TextBlock Text="{Binding NotificationsLabel}" FontSize="16" FontWeight="SemiBold"/>
   </Button>

    <!-- Tasks -->
     <Button Click="OnTasksClick" Classes="navButton">
   <TextBlock Text="{Binding TasksLabel}" FontSize="16" FontWeight="SemiBold"/>
  </Button>

     <!-- Settings -->
    <Button Click="OnSettingsClick" Classes="navButton" Margin="0,40,0,0">
    <TextBlock Text="{Binding SettingsLabel}" FontSize="16" FontWeight="SemiBold"/>
    </Button>
          </StackPanel>
    </ScrollViewer>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Row="1" Grid.Column="1" 
     Background="#F5F5F5"
          Padding="30">
  <ContentControl Content="{Binding CurrentView}"/>
   </Border>
    </Grid>
</Window>
