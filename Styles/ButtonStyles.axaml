<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Navigation Button Style -->
    <Style Selector="Button.navButton">
        <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
     <Setter Property="Padding" Value="20,15"/>
     <Setter Property="HorizontalAlignment" Value="Stretch"/>
   <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="FontWeight" Value="Regular"/>
    </Style>
    
    <Style Selector="Button.navButton:pointerover">
        <Setter Property="Background" Value="#1A89C5"/>
    </Style>
  
    <Style Selector="Button.navButton:pressed">
        <Setter Property="Background" Value="#01689B"/>
    </Style>

    <!-- Card Style -->
    <Style Selector="Border.card">
<Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="24"/>
    <Setter Property="BoxShadow" Value="0 2 8 0 #10000000"/>
    </Style>

    <!-- Primary Button Style (Rijksoverheid) -->
    <Style Selector="Button.primary">
     <Setter Property="Background" Value="#01689B"/>
        <Setter Property="Foreground" Value="White"/>
 <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,10"/>
<Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <Style Selector="Button.primary:pointerover">
<Setter Property="Background" Value="#1A89C5"/>
    </Style>
    
    <Style Selector="Button.primary:pressed">
        <Setter Property="Background" Value="#154273"/>
    </Style>

    <!-- Secondary Button Style -->
    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#01689B"/>
        <Setter Property="BorderBrush" Value="#01689B"/>
        <Setter Property="BorderThickness" Value="2"/>
      <Setter Property="Padding" Value="16,10"/>
      <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
 <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <Style Selector="Button.secondary:pointerover">
        <Setter Property="Background" Value="#F0F8FF"/>
    </Style>

 <!-- Success Button -->
    <Style Selector="Button.success">
   <Setter Property="Background" Value="#39870C"/>
    <Setter Property="Foreground" Value="White"/>
     <Setter Property="BorderThickness" Value="0"/>
     <Setter Property="Padding" Value="16,10"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <Style Selector="Button.success:pointerover">
   <Setter Property="Background" Value="#4A9F1C"/>
    </Style>

    <!-- Header Text Style -->
    <Style Selector="TextBlock.header">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#154273"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <!-- Subheader Text Style -->
    <Style Selector="TextBlock.subheader">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#154273"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- Body Text Style -->
 <Style Selector="TextBlock.body">
     <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#696969"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>

    <!-- Metric Value Style -->
    <Style Selector="TextBlock.metric">
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#01689B"/>
    </Style>

    <!-- Label Style -->
    <Style Selector="TextBlock.label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
   <Setter Property="Foreground" Value="#696969"/>
   <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <!-- Input TextBox Style -->
    <Style Selector="TextBox.input">
        <Setter Property="Padding" Value="12"/>
        <Setter Property="BorderBrush" Value="#E5E5E5"/>
      <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="4"/>
    <Setter Property="Background" Value="White"/>
    </Style>
    
    <Style Selector="TextBox.input:focus">
        <Setter Property="BorderBrush" Value="#01689B"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- Progress Bar Style -->
    <Style Selector="ProgressBar">
        <Setter Property="Height" Value="8"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Background" Value="#E5E5E5"/>
        <Setter Property="Foreground" Value="#01689B"/>
    </Style>

    <!-- Status Indicator Styles -->
    <Style Selector="Border.status-success">
        <Setter Property="Background" Value="#39870C"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <Style Selector="Border.status-warning">
        <Setter Property="Background" Value="#E17000"/>
        <Setter Property="CornerRadius" Value="4"/>
 <Setter Property="Padding" Value="8,4"/>
</Style>

    <Style Selector="Border.status-error">
   <Setter Property="Background" Value="#D52B1E"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>
</Styles>
